<project name="dd-example" default="load-dd-framework">
	<!-- 
	   @author rooudsho <rogier.oudshoorn@>
	-->
	
	<!-- Setting location properties -->

	<property name="dd-framework.lib.dir" location="..\..\dependencies\" />
	<property name="dd-framework.src.dir" location="..\dd-framework\src\main\java" />
	<property name="dd-example.src.dir" location="src" />
	<property name="temp.dir" location="temp" />
	<property name="target.dir" location="WebContent\WEB-INF\lib" />
	
	<!-- Java  Classpath -->
	<path id="classpath">	    
	    <fileset dir="${dd-framework.lib.dir}" includes="**/*.jar" />
	</path>

	<!-- initializes the dd-framework -->
	<target name="load-dd-framework">
		<!-- recreate temp dir -->
		<delete dir="${temp.dir}" />
		<mkdir dir="${temp.dir}" />
		
		<!-- compile framework -->
		<javac srcdir="${dd-framework.src.dir}" destdir="${temp.dir}" classpathref="classpath" />
		<copy todir="${temp.dir}">
			<fileset dir="${dd-framework.src.dir}" includes="**/*.xslt" />
		</copy>			
		<jar destfile="${target.dir}/dd-framework.jar" basedir="${temp.dir}" />	
		
		<!-- copy all resource jarfiles into our /lib folder -->
		<copy todir="${target.dir}" flatten="true">
			<fileset dir="${dd-framework.lib.dir}" includes="**/*.jar" />
		</copy>
	</target>
	
	<!-- Apply license to all files that don't already have one -->
	<target name="applyLicense">
		<!-- load license into property -->
		<loadfile property="license" srcFile="java-license.txt"/>
		<!-- load regexp version of license -->
		<loadfile property="licenseRegExp" srcFile="java-licenseRegExp.txt"/>
		
		<!-- run regexp against framework -->
		<replaceregexp
			match="\A(?!${licenseRegExp})"
		    replace="${license}"
		>
			<fileset dir="${dd-framework.src.dir}">
			    <include name="**/*.java"/>
			</fileset>			    			
		</replaceregexp>
			
		<!-- run regexp against example -->
		<replaceregexp
			match="\A(?!${licenseRegExp})"
		    replace="${license}"
		>
			<fileset dir="${dd-example.src.dir}">
			    <include name="**/*.java"/>
			</fileset>			    			
		</replaceregexp>
	</target>	
</project>